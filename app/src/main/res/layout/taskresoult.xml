<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E69EE">

    <Button
        android:id="@+id/exit"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FEFEFE"
        android:text="Exit"
        android:textColor="#5E69ED"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showresoult" />

    <TextView
        android:id="@+id/resoultsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Resoults"
        android:textColor="#F4F4FB"
        android:textSize="34sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textColor="#F4F4FB"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resoultsText" />

    <TextView
        android:id="@+id/balli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:hint="resoult"
        android:text="Number"
        android:textColor="#F4F4FB"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/happy" />

    <Button
        android:id="@+id/showresoult"
        android:layout_width="196dp"
        android:layout_height="69dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/white"
        android:text="Show resoult"
        android:textColor="#5E69ED"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balli" />

    <Button
        android:id="@+id/restrart"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="#FEFEFE"
        android:text="Restart"
        android:textColor="#5E69ED"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/exit"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showresoult" />
</androidx.constraintlayout.widget.ConstraintLayout>